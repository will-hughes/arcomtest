<?xml version="1.0" ?>
<cite:citation xmlns:xhtml="http://www.w3.org/1999/xhtml" xmlns:epc="http://eprints.org/ep3/control" xmlns:cite="http://eprints.org/ep3/citation" >

<!-- 
	Full citation for an eprint. 
-->

<epc:if test="is_set(creators_name)">
  <epc:print expr="creators_name" />
</epc:if>

<epc:if test="date">(<epc:print expr="date" opts="res=year"/>)</epc:if>

<!-- Make sure that the title of the publication, rather than the article, is italicized (WH 17-03-2025)-->
<epc:choose>
  <epc:when test="type = 'article'">
    <cite:linkhere>
      <epc:print expr="title" opts="magicstop"/>
    </cite:linkhere>
  </epc:when>
  <epc:when test="type = 'conference_item'">
    <cite:linkhere>
      <epc:print expr="title" opts="magicstop"/>
    </cite:linkhere>
  </epc:when>
  <epc:otherwise>
    <cite:linkhere>
      <xhtml:em><epc:print expr="title" opts="magicstop"/></xhtml:em>
    </cite:linkhere>
  </epc:otherwise>
</epc:choose>

<epc:choose>

  <epc:when test="type.one_of( 'book','book_section' )">
    <epc:if test="type = 'book_section'">
      <epc:phrase ref="lib/citation:part_of_prefix"/> 
	  <epc:if test="!is_set(creators)">
	    <epc:print expr="editors_name"/> 
		<epc:choose>
		  <epc:when test="length(editors_name) gt 1">
		    <epc:phrase ref="eprint_fieldname_editors_names_cite" />
		  </epc:when>
	      <epc:otherwise>
		  <epc:phrase ref="eprint_fieldname_editors_name_cite" />
		  </epc:otherwise>
		</epc:choose>
	  </epc:if>
      <epc:print expr="book_title" opts="magicstop"/>
    </epc:if>
    <epc:if test="is_set( edition )"> <epc:print expr="edition"/> ed.</epc:if>
    <epc:if test="series">
      <epc:print expr="series"/><epc:if test="volume">, <epc:print expr="volume"/></epc:if>
      <epc:if test="number"> (<epc:print expr="number"/>)</epc:if>.
    </epc:if>
    <epc:print expr="publisher"/><epc:if test="place_of_pub">, <epc:print expr="place_of_pub"/></epc:if><epc:if test="pagerange">, <epc:print expr="pagerange"/></epc:if>.
    <epc:if test="isbn"> ISBN <epc:print expr="isbn"/></epc:if>
  </epc:when>

  <epc:when test="type = 'article'">
    <epc:if test="publication"><xhtml:em><epc:print expr="publication"/></xhtml:em><epc:if test="volume">, <xhtml:strong><epc:print expr="volume"/></xhtml:strong></epc:if><epc:if test="number">(<epc:print expr="number"/>)</epc:if><epc:if test="article_number">: <epc:print expr="article_number"/></epc:if>,</epc:if>
    <epc:if test="pagerange"> <epc:print expr="pagerange"/>.</epc:if>
    <epc:if test="issn"> ISSN <epc:print expr="issn"/></epc:if>
  </epc:when>

  <epc:when test="type = 'monograph'">
    <epc:print expr="monograph_type"/>.
    <epc:print expr="publisher"/><epc:if test="place_of_pub">, <epc:print expr="place_of_pub"/></epc:if>.
  </epc:when>

<!-- For Conference items, use editor name(s) in citation (WH 17-03-2025 -->
  <epc:when test="type = 'conference_item'">
    <epc:phrase ref="lib/citation:part_of_prefix"/> <epc:print expr="contributors_name"/> 
		<epc:choose>
			<epc:when test="length(contributors_name) gt 1">
			<epc:phrase ref="eprint_fieldname_editors_names_cite" />
			</epc:when>
			<epc:otherwise>
			<epc:phrase ref="eprint_fieldname_editors_name_cite" />
			</epc:otherwise>
		</epc:choose>
	<xhtml:em><epc:print expr="event_title"/></xhtml:em><epc:if test="event_dates">, <epc:print expr="event_dates"/></epc:if><epc:if test="event_location">, <epc:print expr="event_location"/></epc:if>.
  </epc:when>

  <epc:when test="type = 'thesis'">
    <epc:print expr="thesis_type_display"/>, <epc:print expr="institution"/><epc:if test="place_of_pub">, <epc:print expr="place_of_pub"/></epc:if>.
  </epc:when>

  <epc:when test="type = 'patent'">
    <epc:print expr="id_number"/>.
  </epc:when>

  <epc:when test="type = 'other'">
    <epc:print expr="publisher"/><epc:if test="place_of_pub">, <epc:print expr="place_of_pub"/></epc:if>.
  </epc:when>

  <epc:otherwise>
    [<epc:print expr="type"/>]
  </epc:otherwise>

</epc:choose>

<epc:if test=" ! type.one_of( 'patent','thesis' )">
  <epc:if test="ispublished.one_of('unpub', 'submitted', 'inpress')"> (<epc:print expr="ispublished"/>)</epc:if>
</epc:if>

</cite:citation>
